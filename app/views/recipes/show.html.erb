
<h1>Informações sobre <%=@recipe.name%> </h1>
    <%= link_to 'Editar', edit_recipe_path%>
    <dl>
        <dt>
            <strong>Nome da Receita: </strong>
            <%=@recipe.name%>
        </dt>
            
        <dd>
            <strong>Tipo da Receita: </strong>
            <%=@recipe.recipe_type.name if @recipe.recipe_type%>
        </dd>
                
        <dd>
            <strong>Culinária: </strong>
            <%=@recipe.cuisine%>
        </dd>

        <dd>
            <strong>Ingredientes: </strong>
            <%=@recipe.ingredients%>
        </dd>

        <dd>
            <strong>Modo de preparo: </strong>
            <%=@recipe.cook_method%>
        </dd>

        <dd>
            <strong>Tempo de preparo: </strong>
            <%=@recipe.cook_time%>
        </dd>
    </dl>
        